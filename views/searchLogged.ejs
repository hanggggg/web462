	<!-- myFunc creating for checking pictures problem -->

		<%function myFunc(argument) {%>
			<% try { %>

				<img src="<%=argument["volumeInfo"]["imageLinks"]["thumbnail"]%>" alt="wow! this is a bad picture!" width="200" height="225" class="card-img-top">

			<% } catch(e) { } %>
		<% } %>
		
		<!-- run the myFunc -->
		
		<!-- get authors array -->
		<%function getAuthors(argument) {%>
            <% try { %>
            
                <% var authors = argument["volumeInfo"]["authors"]; %>
		
				<!-- one author -->
				<% if(authors.length == 1){ %>
					<b>Author:</b> <%= authors;	%>
				<%}%>
				
				<!-- more than one author -->
				<% if(authors.length > 1){ %>
					<b>Authors:</b>
					<% for(var i=0; i<authors.length-1; i++) { %>
						<%= authors[i] %>, 
					<%}%>
					<%= authors[authors.length-1]; %>
				<%}%>
            
            <% } catch(e) { } %>
        <% } %>
		
		<!-- get category array -->
		<%function getCategories(argument) {%>
            <% try { %>
		
                <% var categories = argument["volumeInfo"]["categories"]; %>
				
				<!-- one category -->
				<% if(categories.length == 1){ %>
					<b>Category:</b> <%= categories;	%>
				<%}%>
		
				<!-- more than one category -->
				<% if(categories.length > 1){ %>
					<b>Categories:</b>
					<% for(var i=0; i<categories.length-1; i++) { %>
						<%= categories[i] %>, 
